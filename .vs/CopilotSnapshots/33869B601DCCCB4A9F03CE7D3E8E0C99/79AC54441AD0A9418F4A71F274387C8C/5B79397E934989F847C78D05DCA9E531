using Gestion_Cursos.Controllers;
using Gestion_Cursos.Models;
using Gestion_Cursos.Data;
using System;
using System.Linq;
using System.Text.RegularExpressions;
using System.Windows.Forms;
using Microsoft.Data.SqlClient;

namespace Gestion_Cursos.Views.Usuarios
{
    public partial class frm_agregar_Usuario : Form
    {
        private readonly Usuario_Controller _usuarioController = new Usuario_Controller();

        public frm_agregar_Usuario()
        {
            InitializeComponent();
            CargarRoles();
        }

        private void CargarRoles()
        {
            cmb_Rol.Items.Clear();
            try
            {
                using var db = new Gestion_Curso_DbContext();
                var roles = db.Credenciales
                    .AsQueryable()
                    .Select(c => c.Rol)
                    .Where(r => !string.IsNullOrEmpty(r))
                    .Distinct()
                    .ToList();

                if (roles != null && roles.Count > 0)
                {
                    foreach (var r in roles)
                    {
                        cmb_Rol.Items.Add(r);
                    }
                    btn_Guardar.Enabled = true;
                }
                else
                {
                    // Intentar obtener los valores permitidos desde la CHECK constraint de la tabla Credenciales
                    try
                    {
                        var connString = db.Database.GetConnectionString();
                        using var conn = new SqlConnection(connString);
                        conn.Open();
                        using var cmd = conn.CreateCommand();
                        cmd.CommandText = @"SELECT cc.definition
FROM sys.check_constraints cc
JOIN sys.objects o ON cc.parent_object_id = o.object_id
WHERE o.name = 'Credenciales' AND cc.definition LIKE '%Rol%';";
                        var def = cmd.ExecuteScalar() as string;
                        if (!string.IsNullOrWhiteSpace(def))
                        {
                            var matches = System.Text.RegularExpressions.Regex.Matches(def, "'([^']+)'",
                            System.Text.RegularExpressions.RegexOptions.Compiled);
                            foreach (System.Text.RegularExpressions.Match m in matches)
                            {
                                var val = m.Groups[1].Value;
                                if (!cmb_Rol.Items.Contains(val)) cmb_Rol.Items.Add(val);
                            }
                        }

                        if (cmb_Rol.Items.Count > 0)
                        {
                            btn_Guardar.Enabled = true;
                        }
                        else
                        {
                            MessageBox.Show("No existen roles configurados en la base de datos. Contacte al administrador.", "Roles no configurados", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                            // Deshabilitar guardar para evitar violar la restricción
                            btn_Guardar.Enabled = false;
                        }
                    }
                    catch
                    {
                        MessageBox.Show("No se pudieron obtener los roles desde la base de datos. Contacte al administrador.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                        btn_Guardar.Enabled = false;
                    }
                }
            }
            catch (Exception)
            {
                // En caso de error al leer la DB deshabilitar guardar y avisar
                MessageBox.Show("Error al cargar roles desde la base de datos.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                btn_Guardar.Enabled = false;
            }

            if (cmb_Rol.Items.Count > 0) cmb_Rol.SelectedIndex = 0;
        }

        private void cmb_Tipo_SelectedIndexChanged(object sender, EventArgs e)
        {

        }

        private void btn_Guardar_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(txt_Nombres.Text) || string.IsNullOrWhiteSpace(txt_Apellidos.Text))
            {
                MessageBox.Show("Debe completar nombres y apellidos", "Datos incompletos", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            if (string.IsNullOrWhiteSpace(txt_Correo.Text) || !Regex.IsMatch(txt_Correo.Text, @"^[^@\s]+@[^@\s]+\.[^@\s]+$"))
            {
                MessageBox.Show("Ingrese un correo válido", "Correo inválido", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                txt_Correo.Focus();
                return;
            }

            if (string.IsNullOrWhiteSpace(txt_Contrasenia.Text))
            {
                MessageBox.Show("Debe ingresar una contraseña", "Contraseña vacía", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                txt_Contrasenia.Focus();
                return;
            }

            // Preparar usuario y credencial
            var usuario = new Usuario
            {
                Nombre = txt_Nombres.Text.Trim(),
                Apellido = txt_Apellidos.Text.Trim(),
                // Estado por defecto true
                Estado = true
            };

            var rolSeleccionado = cmb_Rol.SelectedItem?.ToString();
            usuario.Credenciale = new Credenciale
            {
                Correo = txt_Correo.Text.Trim(),
                Contrasenia = txt_Contrasenia.Text.Trim(),
                Rol = string.IsNullOrWhiteSpace(rolSeleccionado) ? string.Empty : rolSeleccionado
            };

            if (string.IsNullOrWhiteSpace(usuario.Credenciale.Rol))
            {
                MessageBox.Show("No se ha seleccionado un rol válido. Contacte al administrador.", "Rol inválido", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            var res = _usuarioController.insertar(usuario);
            if (res == "ok")
            {
                MessageBox.Show("Usuario guardado correctamente.", "Información", MessageBoxButtons.OK, MessageBoxIcon.Information);
                this.Close();
            }
            else
            {
                MessageBox.Show(res + "\nRevise que el rol seleccionado exista en la base de datos.", "Error al guardar", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btn_Cancelar_Click(object sender, EventArgs e)
        {
            txt_Nombres.Text = string.Empty;
            txt_Apellidos.Text = string.Empty;
            txt_Correo.Text = string.Empty;
            txt_Contrasenia.Text = string.Empty;
            if (cmb_Rol.Items.Count > 0) cmb_Rol.SelectedIndex = 0;
        }

        private void btn_Salir_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void txt_Correo_Leave(object sender, EventArgs e)
        {
            if (!Regex.IsMatch(txt_Correo.Text, @"^[^@\s]+@[^@\s]+\.[^@\s]+$"))
            {
                txt_Correo.Text = string.Empty;
                txt_Correo.Focus();
                MessageBox.Show("El correo no tiene un formato válido", "Correo inválido", MessageBoxButtons.OK, MessageBoxIcon.Warning);
            }
        }
    }
}
